  %body

    .container

      .row
        .span9
          = bootstrap_flash
          = yield
        .span3
          .well.sidebar-nav
            %h3 Contacts
            %ul.nav.nav-list
              %li.nav-header
              %li= link_to "Email", "mailto:bruno@bccoelho.com"
              %li= link_to "Twitter", "https://twitter.com/bcsnc", :target => "_blank"
              %li= link_to "LinkedIn", "http://www.linkedin.com/pub/bruno-coelho/41/43a/9a6", :target => "_blank"
              %li= link_to "GitHub", "https://github.com/bcoelh0", :target => "_blank"


      %footer
        %ul
          %li
            %i.icon-envelope
            %a{:href => "mailto:bruno@bccoelho.com"} brunocsncoelho@gmail.com
          %li
            %i.icon-map-marker>
            Lisbon
